#VRML V2.0 utf8

# Einfaches VRML-Modell eines Akkuschraubers für das Fallbeispiel im Kurs Systems Engineering.
# Das Modell ist bewusst einfach gehalten und besteht aus geometrischen Grundkörpern.

Group {
  children [
    # Gehäuse (oberer Teil, meist farbig)
    Transform {
      translation 0 0.06 0
      children [
        Shape {
          appearance Appearance {
            material Material {
              diffuseColor 0.2 0.2 0.8  # Gelbe Farbe für das Gehäuse
            }
          }
          geometry Box {
            size 0.07 0.08 0.16
          }
        }
      ]
    },
    # Griff
    Transform {
      translation 0 -0.04 0.02
      rotation 1 0 0 -0.3
      children [
        Shape {
          appearance Appearance {
            material Material {
              diffuseColor 0.2 0.8 0.2  # Dunkelgrau für den Griff
            }
          }
          geometry Cylinder {
            radius 0.03
            height 0.18
          }
        }
      ]
    },
    # Bohrfutter-Gruppe (kann für Animationen gedreht werden)
    DEF Bohrfutter Transform {
      translation 0 0.06 0.12
      rotation 1 0 0 -1.5708
      children [
        Shape {
          appearance Appearance {
            material Material {
              diffuseColor 0.8 0.2 0.2  # Metall-Optik für das Bohrfutter
            }
          }
          geometry Cylinder {
            radius 0.025
            height 0.08
          }
        },
        # Schrauber-Bit (einfacher Zylinder)
        Transform {
          translation 0 -0.065 0
          children [
            Shape {
              appearance Appearance {
                material Material {
                  diffuseColor 0.5 0.5 0.5 # Stahlgrau
                }
              }
              geometry Cylinder {
                radius 0.004
                height 0.05
              }
            }
          ]
        }
      ]
    }
  ]
}
